// Задание 1 
function number1(a,b){
  let n;
  if (a < b){
    n = b - a;
    console.log(`Задание номер 1: ${a} < ${b} на ${n}`);
  }
  else if (a > b){
    n = a - b;
    console.log(`Задание номер 1: ${a} > ${b} на ${n}`);
  }
  else{
    console.log("Задание номер 1: a равно b ");
  }
}  

number1(17,7);



