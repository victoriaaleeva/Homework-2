// Задание 7

let array7 = [1,2,3,4];
function number7(array7){
  let sum = 0;
  for(let i = 0; i < array7.length; i++){
    sum+=array7[i];
  }
   console.log("Задание номер 7:")
  console.log("Сумма данного массива равна " + sum);
}
number7(array7);


